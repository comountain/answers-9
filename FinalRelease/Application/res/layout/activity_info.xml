<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/info_username"
        android:layout_width="300sp"
        android:layout_height="50sp"
        android:layout_below="@+id/info_nick"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:editable="false"
        android:text="账号："
        android:textSize="15sp" />

    <EditText
        android:id="@+id/info_nick"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_alignEnd="@+id/info_gamescore"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="0dp"
        android:editable="true"
        android:textSize="15sp" />

    <TextView
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/info_nick"
        android:text="昵称："
        android:textSize="15sp" />

    <TextView
        android:id="@+id/info_gamescore"
        android:layout_width="300sp"
        android:layout_height="50sp"
        android:layout_below="@+id/info_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:editable="false"
        android:text="积分："
        android:textSize="15sp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:background="@color/white"
        android:text="返回"
        android:onClick="back"
        android:layout_marginStart="0dp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:id="@+id/info_back"/>

    <Button
        android:id="@+id/info_modify"
        android:layout_width="wrap_content"
        android:layout_height="70sp"
        android:layout_below="@id/info_gamescore"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100sp"
        android:background="@drawable/shape_pressed"
        android:text="更换头像"
        android:textSize="25sp" />
</RelativeLayout>