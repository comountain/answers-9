<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activity.MyActivity"
    >

    <ImageView
        android:id="@+id/my_touxiang"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/yonggan" />


    <TextView
        android:id="@+id/mynick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150sp"
        android:layout_marginTop="50sp"
        android:text="nickname"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/myscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150sp"
        android:layout_marginTop="90sp"
        android:text="gamescore"
        android:textSize="15sp" />


    <Button
        android:id="@+id/my_1"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:text = "账号信息"
        android:layout_marginTop="30dp"
        android:layout_below="@id/my_touxiang"
        android:background="#F16C4D"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:visibility="visible" />

    <Button
        android:id="@+id/my_2"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@id/my_1"
        android:layout_marginTop="20dp"
        android:background="#F16C4D"
        android:gravity="center_vertical"
        android:text="设计师"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/my_3"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:text = "重新登陆"
        android:layout_marginTop="20dp"
        android:layout_below="@id/my_2"
        android:background="#F16C4D"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:onClick="logout"
        android:visibility="visible" />


    <LinearLayout
        android:id="@+id/linearLayout_mychoose"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"

        android:background="#F16C4D"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/mess_to_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="#00000000"

            android:gravity="center"
            android:text="主页" />

        <Button
            android:id="@+id/mess_to_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="#00000000"

            android:gravity="center"
            android:text="房间" />

        <Button
            android:id="@+id/mess_to_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:text="发现" />

        <Button
            android:id="@+id/mess_to_mess"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:text="账号"
            android:textColor="@color/white" />
    </LinearLayout>


</RelativeLayout>